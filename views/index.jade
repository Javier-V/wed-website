doctype html
head
  title Our Wedding!
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=Edge')
  meta(name='description' content='')
  meta(name='keywords' content='')
  meta(name='author' content='')
  meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')
  link(rel='stylesheet' href='css/bootstrap.min.css')
  link(rel='stylesheet' href='css/font-awesome.min.css')
  link(rel='stylesheet' href='css/aos.css')
  link(rel='stylesheet' href='css/tooplate-gymso-style.css')
  link(rel='icon' href='favicon.ico')
//- MENU BAR
nav.navbar.navbar-expand-lg.fixed-top
  .container
    a#title2.navbar-brand(href='#home') #{__('Our Wedding')}
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav.ml-lg-auto
        li.nav-item
          a.nav-link.smoothScroll(href='#home') #{__('Home')}
        li.nav-item
          a.nav-link.smoothScroll(href='#location') #{__('Location')}
        li.nav-item
          a.nav-link.smoothScroll(href='#staying') #{__('Staying in Lodz')}
        li.nav-item
          a.nav-link.smoothScroll(href='#schedule') #{__('Schedule')}
        li.nav-item
          a.nav-link.smoothScroll(href='#presents') #{__('Presents List')}
        li.nav-item
          a.nav-link.smoothScroll(href='#dictionary') #{__('Dictionary')}

      ul.social-icon.ml-lg-3
        li
          a(href='?lang=pl')
            img(src='images/pl.svg' width='24px' height='24px')
        li
          a(href='?lang=es')
            img(src='images/es.svg' width='24px' height='24px')

//- HOME
section#home.hero.d-flex.flex-column.justify-content-center.align-items-center
  .bg-overlay
  .container
    .row
      .col-lg-8.col-md-10.mx-auto.col-12
        .hero-text.mt-5.text-center
          h1.text-white(data-aos='fade-up' data-aos-delay='500') #{__('We are getting married!')}
          a.btn.custom-btn.mt-3(href='#schedule' data-aos='fade-up' data-aos-delay='600')  #{__('When')}
          a.btn.custom-btn.bordered.mt-3(href='#location' data-aos='fade-up' data-aos-delay='700') #{__('Where')}

//- LOCATION
section#location.contact.section
  .container
    .row
      .mx-auto.mt-4.mt-lg-0.mt-md-0.col-lg-12.col-md-12.col-12
        h2.mb-4(data-aos='fade-up' data-aos-delay='600')
          |#{__('The location')}
        p(data-aos='fade-up' data-aos-delay='800')
          i.fa.fa-map-marker.mr-1
          |  Krzemieniecka 2A, Łódź, Poland
        p(data-aos='fade-up' data-aos-delay='900')
          i.mr-1 #{__('There is a parking in the building')}
        .google-map(data-aos='fade-up' data-aos-delay='900')
          iframe(src='https://maps.google.com/maps?q=Krzemieniecka+2A,+90-001+%C5%81%C3%B3d%C5%BA,+Poland&t=&z=13&ie=UTF8&iwloc=&output=embed' width='1920' height='450' frameborder='0' style='border:0;' allowfullscreen='')

//- STAYING
section#staying.class.section
  .container
    .row
      .col-lg-12.col-12.text-center.mb-5
        //- h6(data-aos='fade-up') Get A Perfect Body
        h2(data-aos='fade-up' data-aos-delay='200') #{__('Hotels nearby')}
      .col-lg-4.col-md-6.col-12(data-aos='fade-up' data-aos-delay='400')
        .class-thumb
          a(href='https://www.hilton.com/en/hotels/lcjdldi-doubletree-lodz/' target='_blank')
            img.img-fluid(src='images/doubleTree.jpg' alt='DoubleTree by Hilton Lodz')
          .class-info
            h3.mb-1 DoubleTree Hilton
            span.class-price $$$
      .mt-5.mt-lg-0.mt-md-0.col-lg-4.col-md-6.col-12(data-aos='fade-up' data-aos-delay='500')
        .class-thumb
          a(href='https://www.hotel-bb.com/en/hotel/lodz-centrum' target='_blank')
            img.img-fluid(src='images/B&B.jpg' alt='B&B Hotel Łódź')
          .class-info
            h3.mb-1 B&B Hotel Łódź
            span.class-price $$

      .mt-5.mt-lg-0.col-lg-4.col-md-6.col-12(data-aos='fade-up' data-aos-delay='600')
        .class-thumb
          a(href='https://hoteltobaco.pl/en/' target='_blank')
            img.img-fluid(src='images/HotelTobaco.jpg' alt='Very close to the wedding')
          .class-info
            h3.mb-1 Hotel Tobaco
            span.class-price $$
//- SCHEDULE
section#schedule.schedule.section
  .container
    .row
      .col-lg-12.col-12.text-center
        h6(data-aos='fade-up') #{__('It will happen on September 3rd 2022')}
        h2.text-white(data-aos='fade-up' data-aos-delay='200') #{__('Party plan')}
      .col-lg-12.py-5.col-md-12.col-12
        table.table.table-bordered.table-responsive.schedule-table(data-aos='fade-up' data-aos-delay='300')
          thead.thead-light
            th
              i.fa.fa-calendar
            th
          tbody
            tr
              td
                small 17:00
              td
                strong #{__('Ceremony and Wishes')}

            tr
              td
                small 17:55
              td
                strong #{__('Speeches')}

            tr
              td
                small 18:00
              td
                strong #{__('Lunch')}

            tr
              td
                small 19:30
              td
                strong #{__('First Dance')}

            tr
              td 
                small 22:30
              td 
                strong #{__('Wedding dish surprise')}
                span #{__('Delicious')}

            tr
              td 
                small 00:00
              td 
                strong #{__('Wedding cake')}

            tr
              td 
                small 02:00
              td 
                strong #{__('Late Dinner 1')}

            tr
              td 
                small 04:00
              td 
                strong #{__('Late Dinner 2')}            

//- PRESENTS
section#presents.about.section
  .container
    .row
      .mt-lg-5.mb-lg-0.mb-4.col-lg-8.col-md-2.mx-auto.col-2
        h2.mb-4(data-aos='fade-up' data-aos-delay='300') #{__('Presents List')}
        p(data-aos='fade-up' data-aos-delay='500')
          img.img-fluid(src='images/presents.jpg')

